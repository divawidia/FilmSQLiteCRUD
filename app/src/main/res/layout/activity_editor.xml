<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditorActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg_signup">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:fontFamily="@font/poppins_regular"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="30dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Film"
                android:fontFamily="@font/poppins_bold"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </FrameLayout>

    <EditText
        android:id="@+id/edit_judul"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Masukan judul film"
        android:autofillHints=""
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edit_tahun"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Masukan tahun rilis film"
        android:autofillHints=""
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edit_durasi"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Masukan durasi film, contoh: 2jam 30menit"
        android:autofillHints=""
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edit_pemeran"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Masukan nama pemeran film"
        android:autofillHints=""
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/edit_sinopsis"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        android:hint="Masukan sinopsis film"
        android:autofillHints=""
        android:layout_marginBottom="10dp"/>
    <Button
        android:id="@+id/btn_save"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Simpan"/>

</LinearLayout>